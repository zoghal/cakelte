{
  "name": "arodu/cakelte",
  "description": "CakeLTE: AdminLTE plugin for CakePHP",
  "type": "cakephp-plugin",
  "license": "MIT",
  "require": {
    "almasaeed2010/adminlte": "v4.0.0-beta2",
    "cakephp/cakephp": "^5.0",
    "friendsofcake/bootstrap-ui": "^5.0"
  },
  "require-dev": {
    "cakephp/cakephp-codesniffer": "^5.0",
    "phpunit/phpunit": "^10.1.0",
    "phpstan/phpstan": "^1.10",
    "cakedc/cakephp-phpstan": "^3.1"
  },
  "autoload": {
    "psr-4": {
      "CakeLte\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "CakeLte\\Test\\": "tests/",
      "Cake\\Test\\": "vendor/cakephp/cakephp/tests/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "bin/cake cakelte install"
    ],
    "check": [
      "@test",
      "@cs-check"
    ],
    "cs-check": "phpcs --colors -p",
    "cs-fix": "phpcbf --colors -p",
    "stan": "phpstan analyse",
    "test": "phpunit --colors=always",
    "test-coverage": "XDEBUG_MODE=coverage vendor/bin/phpunit --coverage-html webroot/coverage --colors=always"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}